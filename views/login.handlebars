<!-- posts-new.handlebars -->
<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-8">
            <form action="/login" method="post">
                <legend>Login</legend>
                <div class="form-group">
                    <label for="post-subreddit">Username</label>
                    <input name="username" type="text" class="form-control" id="user-username" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="post-title">Password</label>
                    <input type="password" name="password" class="form-control" id="user-password">
                </div>
                <div class='text-right'>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
